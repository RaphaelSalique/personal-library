{% extends 'base.html.twig' %}

{% block title %}S'authentifier{% endblock %}

{% block body %}

    <div class="columns is-centered">
        <div class="column is-5-tablet is-4-desktop is-3-widescreen">
            {% if error %}
                <div class="notification is-danger is-light">
                    {{ error.messageKey|trans(error.messageData, 'security') }}
                </div>
            {% endif %}
            <form method="post" class="box">
                <div class="field">
                    <label class="label" for="inputEmail">Email</label>
                    <div class="control has-icons-left">
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input" required autofocus>
                        <span class="icon is-small is-left">
                            <i class="fas fa-envelope"></i>
                        </span>
                    </div>
                </div>
                <div class="field">
                    <label class="label" for="inputPassword">Mot de passe</label>
                    <div class="control has-icons-left">
                        <input type="password" name="password" id="inputPassword" class="input" required>
                        <span class="icon is-small is-left">
                            <i class="fas fa-lock"></i>
                        </span>
                    </div>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                {#
                    Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html

                    <div class="checkbox mb-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Remember me
                        </label>
                    </div>
                #}
                <div class="field">
                    <button class="button is-success" type="submit">
                        S'identifier
                    </button>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
