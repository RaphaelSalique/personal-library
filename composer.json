{
    "name": "raphaelsalique/personal-library",
    "type": "project",
    "description": "Projet pour g√©rer mes livres",
    "license": "proprietary",
    "require": {
        "php": "^7.1.3",
        "ext-ctype": "*",
        "ext-iconv": "*",
        "google/apiclient": "^2.0",
        "sensio/framework-extra-bundle": "^6.1",
        "symfony/asset": "4.4.*",
        "symfony/console": "4.4.*",
        "symfony/dotenv": "4.4.*",
        "symfony/expression-language": "5.2.*",
        "symfony/flex": "^1.3.1",
        "symfony/form": "4.4.*",
        "symfony/framework-bundle": "4.4.*",
        "symfony/http-client": "4.4.*",
        "symfony/intl": "4.4.*",
        "symfony/mailer": "5.2.*",
        "symfony/monolog-bundle": "^3.1",
        "symfony/orm-pack": "^2.1",
        "symfony/process": "4.4.*",
        "symfony/security-bundle": "4.4.*",
        "symfony/serializer-pack": "^1.0",
        "symfony/translation": "4.4.*",
        "symfony/twig-pack": "^1.0",
        "symfony/validator": "4.4.*",
        "symfony/web-link": "4.4.*",
        "symfony/webpack-encore-bundle": "^1.7",
        "symfony/yaml": "4.4.*"
    },
    "replace": {
        "paragonie/random_compat": "2.*",
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php56": "*",
        "symfony/polyfill-php70": "*",
        "symfony/polyfill-php71": "*"
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "require-dev": {
        "deployer/deployer": "^6.7",
        "doctrine/doctrine-fixtures-bundle": "^3.3",
        "escapestudios/symfony2-coding-standard": "3.x-dev",
        "friendsoftwig/twigcs": "^5.0",
        "jakub-onderka/php-parallel-lint": "^1.0",
        "liip/test-fixtures-bundle": "^1.0.0",
        "localheinz/composer-normalize": "^2.2",
        "nelmio/alice": "^3.5",
        "phpmd/phpmd": "^2.8",
        "phpro/grumphp": "^1.3.1",
        "phpstan/extension-installer": "^1.0",
        "phpstan/phpstan": "^0.12.4",
        "phpstan/phpstan-doctrine": "^0.12.8",
        "phpstan/phpstan-phpunit": "^0.12.5",
        "phpstan/phpstan-symfony": "^0.12.2",
        "sebastian/phpcpd": "^4.1",
        "sensiolabs/security-checker": "^6.0",
        "squizlabs/php_codesniffer": "^3.5",
        "symfony/debug-pack": "^1.0",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "^5.0",
        "symfony/profiler-pack": "^1.0",
        "symfony/test-pack": "^1.0",
        "theofidry/alice-data-fixtures": "^1.1"
    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "4.4.*"
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ],
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%": "symfony-cmd"
        },
        "ci": [
            "@phpcpd",
            "@phpstan",
            "@phpcs",
            "@phpmd",
            "@tests"
        ],
        "phpcbf": "vendor/bin/phpcbf --standard=Symfony src/",
        "phpcpd": "vendor/bin/phpcpd src/",
        "phpcs": "vendor/bin/phpcs --standard=Symfony src/",
        "phpmd": "vendor/bin/phpmd src text cleancode, codesize, controversial, design, naming, unusedcode",
        "phpstan": [
            "@php bin/console cache:warmup --env=dev",
            "@php bin/console cache:warmup --env=test",
            "@phpstan-general",
            "@phpstan-tests"
        ],
        "phpstan-general": "vendor/bin/phpstan analyse -c phpstan.neon src --level 7 --no-progress",
        "phpstan-tests": "vendor/bin/phpstan analyse -c phpstan-tests.neon tests --level 7 --no-progress",
        "tests": "bin/phpunit"
    }
}
